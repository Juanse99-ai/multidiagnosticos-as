{
  "version": 2,
  "redirects": [
    {
      "source": "/",
      "has": [
        { "type": "host", "value": "multidiagnosticosas.com" }
      ],
      "destination": "https://www.multidiagnosticosas.com",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(?:png|jpg|jpeg|webp|svg|gif|css|js|woff2)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}